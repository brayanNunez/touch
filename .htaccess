Options FollowSymLinks
<IfModule mod_rewrite.c>
    RewriteEngine on

    RewriteCond $1 !^(public|assets)
    RewriteCond %{REQUEST_FILNAME} !-f
    RewriteCond %{REQUEST_FILNAME} !-d
    RewriteRule ^(.*)$ index.php?/$1 [L]
</IfModule>

<IfModule !mod_rewrite.c>
    ErrorDocument 404 /index.php
</IfModule>

